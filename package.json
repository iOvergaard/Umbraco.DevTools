{
  "name": "umbraco.devtools",
  "version": "0.0.1",
  "description": "A browser extension to help with debugging the Webcomponent based Umbraco backoffice V13+",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start:firefox": "web-ext run --source-dir extension/ --devtools",
    "start:firefox:developer": "web-ext run --source-dir extension/ --firefox firefoxdeveloperedition",
    "start:chromium": "web-ext run --source-dir extension/ --target chromium",
    "lint": "web-ext lint --source-dir extension/"
  },
  "keywords": [
    "browser-extension",
    "umbraco",
    "webcomponents"
  ],
  "author": "Warren Buckley",
  "private": true,
  "devDependencies": {
    "typescript": "^5.0.3",
    "web-ext": "^7.6.0"
  },
  "dependencies": {
    "lit": "^2.7.0"
  }
}
