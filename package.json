{
  "name": "umbraco.devtools",
  "version": "0.0.1",
  "description": "A browser extension to help with debugging the Webcomponent based Umbraco backoffice V13+",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rollup --config",
    "watch": "rollup --config --watch",
    "start:firefox": "web-ext run --source-dir extension/ --browser-console --devtools --start-url https://ashy-bay-09f36a803.1.azurestaticapps.net",
    "start:firefox:developer": "web-ext run --source-dir extension/ --firefox firefoxdeveloperedition --browser-console --devtools --start-url https://ashy-bay-09f36a803.1.azurestaticapps.net",
    "start:chromium": "web-ext run --source-dir extension/ --target chromium --browser-console --devtools --start-url https://ashy-bay-09f36a803.1.azurestaticapps.net",
    "lint": "web-ext lint --source-dir extension/"
  },
  "keywords": [
    "browser-extension",
    "umbraco",
    "webcomponents"
  ],
  "author": "Warren Buckley",
  "private": true,
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/webextension-polyfill": "^0.10.0",
    "rollup": "^3.20.2",
    "tslib": "^2.5.0",
    "typescript": "^5.0.3",
    "web-ext": "^7.6.0",
    "webextension-polyfill": "^0.10.0"
  },
  "dependencies": {
    "lit": "^2.7.0"
  }
}
